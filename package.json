{
  "name": "vue3-dida",
  "type": "module",
  "version": "0.0.0",
  "private": true,
  "packageManager": "pnpm@7.17.0",
  "engines": {
    "node": ">=16.14.0"
  },
  "scripts": {
    "bootstrap": "cross-env CYPRESS_INSTALL_BINARY=0 pnpm i",
    "dev:fe": "pnpm -F frontend dev",
    "build": "pnpm build:fe",
    "build:fe": "pnpm -F frontend build",
    "preview:fe": "pnpm -F frontend preview",
    "test:unit": "pnpm -F frontend test-unit-run",
    "prepare": "simple-git-hooks",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "dep:up": "taze -I major"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^0.34.1",
    "@commitlint/cli": "^17.4.1",
    "@commitlint/config-conventional": "^17.4.0",
    "@types/node": "^18.11.18",
    "eslint": "^8.31.0",
    "lint-staged": "^13.1.0",
    "simple-git-hooks": "^2.8.1",
    "taze": "^0.8.5",
    "typescript": "^4.9.4"
  },
  "simple-git-hooks": {
    "pre-commit": "pnpm exec lint-staged",
    "commit-msg": "pnpm exec commitlint --edit \"${1}\""
  },
  "lint-staged": {
    "*.{js,ts,json,md,jsx,tsx,vue,yml,yaml}": [
      "eslint --fix"
    ]
  },
  "eslintConfig": {
    "extends": "@antfu",
    "ignorePatterns": [
      "**/*.cy.js"
    ]
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  }
}
